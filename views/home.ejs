<%- include("partials/header") -%>
	<section id="title">
		<!-- container row column -->
		<div class="container-fluid p-4">
			<div class="row m-1">
				<div class="col-lg-8 font-weight-bold" style="font-size: 35px;">
					<a href="/note/show" class="text-white text-decoration-none">
						NoteVault
					</a>
				</div>
				<!-- Dark mode toggle switch with custom sun and moon icons -->
				<div class="toggle-container">
					<label class="switch">
						<input type="checkbox" id="modeToggle">
						<span class="slider round">
							<img src="/image/light.png" class="sun slider-icon" alt="light mode" width="30"
								height="30" />
							<img src="/image/dark.png" class="moon slider-icon" alt="light mode" width="30"
								height="30" />
						</span>
					</label>
				</div>
				<div class="col-lg-4">
					<div class="row p-2 font-weight-light">
						<div class="col-lg-6 text-center">
							<a href="/user/login" class="text-white text-decoration-none">
								Login
							</a>
						</div>
						<div class="col-lg-6 text-center">
							<a href="/user/register" class="text-white text-decoration-none">
								Register
							</a>
						</div>
					</div>
				</div>
			</div>
			<div class="row mt-5 align-items-center">
				<div class="col-lg-8">
					<p style="font-size: 100px;">Keep your thoughts, ideas, and important information in one secure
						place.
					</p>
				</div>
				<div class="col-lg-4">
					<img class="img-fluid" src="/image/notebook.jpg" alt="notebook">
				</div>
			</div>
		</div>

	</section>


	<section class="features p-5">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12 text-center why_choose" style="font-size: 60px; font-family:cursive;">
					Why Choose NoteVault?
				</div>
			</div>
			<div class="row justify-content-around" style="font-size: 30px;padding-top :70px;padding-bottom:60px;">
				<div class="row1 col-lg-3 text-center pt-4 pb-2">
					<i class="fa-solid fa-check fa"></i>
					<h1 style="color:rgb(24, 235, 130); font-style:italic;">Easy Note Organization</h1>
					<p style="color:rgb(235, 24, 224);font-style:italic;">Create, categorize, and search your notes
						effortlessly.</p>
				</div>
				<div class="row2 col-lg-3 text-center pt-4 pb-2">
					<i class="fa-solid fa-universal-access fa"></i>
					<h1 style="color:rgb(24, 235, 130);font-style:italic;">Access Anywhere</h1>
					<p style="color:rgb(235, 24, 224);font-style:italic;">Access your notes from any device, whether
						it's your computer, tablet, or smartphone.</p>
				</div>
				<div class="row3 col-lg-3 text-center pt-4 pb-2">
					<i class="fa-solid fa-lock fa"></i>
					<h1 style="color:rgb(24, 235, 130);font-style:italic;">Secure and Private</h1>
					<p style="color:rgb(235, 24, 224);font-style:italic;">Your notes are encrypted and protected,
						ensuring your data is safe.</p>
				</div>
			</div>
		</div>
	</section>

